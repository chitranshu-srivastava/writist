# LLM Provider Configuration
LLM_PROVIDER=claude  # Options: claude, openai, gemini

# API Keys (only provide the one we're using)
CLAUDE_API_KEY=your_claude_key_here
OPENAI_API_KEY=your_openai_key_here
GEMINI_API_KEY=your_gemini_key_here

# Model Selection (optional - uses defaults if not specified)
# Claude: claude-sonnet-4-20250514
# OpenAI: gpt-4-turbo-preview  
# Gemini: gemini-pro
MODEL_NAME=

# Server Configuration
PORT=8080
ENVIRONMENT=development

# CORS Configuration
# After creating extension, add your extension ID here
# Format: chrome-extension://YOUR_EXTENSION_ID
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://YOUR_EXTENSION_ID_HERE

# Rate Limiting (requests per minute per user)
RATE_LIMIT=30

# API Configuration
MAX_TEXT_LENGTH=5000